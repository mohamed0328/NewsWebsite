@model IEnumerable<SomaliaNews.Models.News>
@{
    ViewBag.Title = "Home Page";
}

<div class="container" style="background-color: dimgray; height: 900px;">

    <div class="row">

        <div class="col-md-3 txt-center" style="background-color: green; color: white;">

            @foreach (var news in Model.Where(x => x.Side == "Left"))
            {
                <div class="text-center">
                    <h3 style="color: maroon;">@news.Title</h3>
                    @if (news.Image != null)
                    {
                        <img class="img img-thumbnail" style="max-height: 80px; min-height: 50px; min-height: 80px; max-width: 100px; " src="data:image;base64, @Convert.ToBase64String(news.Image)">
                    }
                    <p>
                        @news.NewsContext
                    </p>
                    <a href="/Home/Details/@news.Id" class="btn btn-sm btn-success">Read More...</a>

                </div>
                <hr />
            }


        </div>

        <div class="col-md-6 txt-center" style="background-color: yellow; color: black;">

        @foreach (var news in Model.Where(x => x.Side == "Midle"))
        {
            <div class="text-center">
                <h3 style="color: maroon;">@news.Title</h3>
                @if (news.Image != null)
                {
                    <img class="img img-thumbnail" style="max-height: 80px; min-height: 50px; min-height: 80px; max-width: 100px; " src="data:image;base64, @Convert.ToBase64String(news.Image)">
                }
                <p>
                    @news.NewsContext
                </p>
                <a href="/Home/Details/@news.Id" class="btn btn-sm btn-success">Read More...</a>

            </div>
            <hr />
        }


    </div>

        <div class="col-md-3 txt-center" style="background-color: lightblue; color: black">

            @foreach (var news in Model.Where(x => x.Side == "Right"))
            {
                <div class="text-center">
                    <h3 style="color: maroon;">@news.Title</h3>
                    @if (news.Image != null)
                    {
                        <img class="img img-thumbnail" style="max-height: 80px; min-height: 50px; min-height: 80px; max-width: 100px; " src="data:image;base64, @Convert.ToBase64String(news.Image)">
                    }
                    <p>
                        @news.NewsContext
                    </p>
                    <a href="/Home/Details/@news.Id" class="btn btn-sm btn-success">Read More...</a>

                </div>
                <hr />
            }

            

        </div>

    </div>

</div>